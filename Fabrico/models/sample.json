{    
    "adapter": "tools/adapters/MySQL.php",
    "freeze": false,
    "fields": [
        {
            "name": "firstName",
            "presenter": "presenters/Text.php"
        },
        {
            "name": "avatar",
            "presenter": "presenters/Files.php",
            "config": {
                "destination": "/assets/uploads"
            },
            "dependencies": [
                {
                    "field": "firstName",
                    "shouldMatch": "[0-9]"
                }                
            ]
        },
        {
            "name": "category",
            "presenter": "presenters/Select.php",
            "config": {
                "options": [
                    {"key": "yes", "label": "answer Yes"},
                    {"key": "no", "label": "answer No"},
                    {"key": "maybe", "label": "answer Maybe"}
                ]
            }
        },
        {
            "name": "color",
            "presenter": "presenters/Color.php"
        }
    ],
    "actions": {
        "listing": {
            "fieldsToHide": ["avatar", "color"]
        }
    }
}