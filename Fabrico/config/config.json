{
    "access": {
        "user": "admin",
        "pass": "admin"
    },
    "paths": {
        "files": "/Fabrico",
        "http": "/admin"
    },
    "routes": [
        {"url": "/admin/sample(.*)?", "controller": "pages/Page.php", "model": "models/sample.json"},
        {"url": "/admin/types(.*)?", "controller": "pages/Page.php", "model": "models/types.json"},
        {"url": "/admin/logout(.*)?", "controller": "pages/Logout.php"},
        {"url": "/admin/login(.*)?", "controller": "pages/Login.php"},
        {"url": "/admin(.*)?", "controller": "pages/Home.php"}
    ],
    "adapters": {
        "MySQL": {
            "host": "localhost",
            "user": "root",
            "pass": "",
            "dbname": "fabrico_test"
        }
    },
    "assets": [
        {
            "name": "javascript", 
            "source": "/modules/js/*.js", 
            "destination": "/assets/compiled/",
            "extension": "js",
            "build": true
        },
        {
            "name": "css", 
            "source": "/assets/css/*.css", 
            "destination": "/assets/compiled/",
            "extension": "css",
            "build": true
        }
    ]
}